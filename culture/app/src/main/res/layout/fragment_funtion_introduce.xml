<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bc">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title1"
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:layout_gravity="center"
                    android:background="#AA7869"
                    android:text="@string/c2"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bc1"
                    android:layout_marginBottom="-110dp">

                </ImageView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">


                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="125dp"
                        android:layout_marginTop="120dp"
                        android:text="@string/c1"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/jump1"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="-150dp"
                        android:layout_marginTop="120dp"
                        android:background="@drawable/next1" />
                </LinearLayout>

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="-80dp"
                    android:text="@string/c2"
                    android:textSize="20sp" />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="20sp"
                android:text="@string/c12"
                android:textColor="#8D664B"
                android:textSize="35sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#FFFAF0"
                android:text="宁波鼓楼"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="#000000" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1px"
                android:background="#66CCFF" />
            <ImageView
                android:id="@+id/pic"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:scaleType="fitXY"
                android:src="@drawable/gulou" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="25dp"
                    android:padding="10dp"
                    android:text="@string/s2"
                    android:textSize="15sp"/>


            </LinearLayout>

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textSize="15sp"
                android:text="@string/s3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="甬派建筑"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:textColor="#000000" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1px"
                android:background="#66CCFF" />

            <TextView
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:text="@string/s5"
                android:textSize="15sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/t2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="25dp"
                    android:text="@string/s6"
                    android:textSize="15sp" />

            </LinearLayout>
            <ImageView
                android:id="@+id/pic1"
                android:layout_width="199dp"
                android:layout_height="100dp"

                android:layout_marginRight="20dp"
                android:layout_gravity="right"
                android:scaleType="fitXY"
                android:src="@drawable/gu" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="评论"
                    android:layout_marginLeft="25dp"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:background="#FFFAF0"/>
                <View
                    android:layout_height="1px"
                    android:layout_width="wrap_content"
                    android:background="#66CCFF"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="25dp"
                        android:src="@drawable/touxiang"/>
                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"/>
                    <Button
                        android:id="@+id/bt1"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/button_style"
                        android:drawableLeft="@drawable/js"
                        android:text="点评" />
                </LinearLayout>

                <TextView
                    android:id="@+id/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="-20dp"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
