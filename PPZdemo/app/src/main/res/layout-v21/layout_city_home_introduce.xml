<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="65dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="7dp"
        android:elevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/test_image_rongqi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="7dp">
                <ImageView
                    android:id="@+id/test_image"
                    android:layout_width="150dp"
                    android:layout_height="250dp"
                    android:src="@drawable/shan"
                    android:scaleType="centerCrop"
                    android:background="@drawable/shape_view_radius" />

            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/test_tv_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/test_image_rongqi"
                android:gravity="fill_horizontal"
                android:paddingLeft="7dp"
                android:text="@string/city_introduce_right"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/test_tv_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/test_tv_right"
                android:gravity="fill_horizontal"
                android:layout_marginTop="-6dp"
                android:text="@string/city_introduce_bottom"
                android:textSize="16sp"/>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>